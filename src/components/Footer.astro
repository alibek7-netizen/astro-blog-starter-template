---
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
const year = new Date().getFullYear();
---

<footer class="footer">
	<div class="inner">
		<div class="left">
			<div class="title">{SITE_TITLE}</div>
			<div class="tagline">{SITE_DESCRIPTION}</div>
		</div>
		<div class="right">
			<div>&copy; {year} {SITE_TITLE}.</div>
			<div class="small">All rights reserved.</div>
		</div>
	</div>
</footer>

<style>
	.footer {
		border-top: 1px solid rgba(var(--border), 0.7);
		padding: 3rem 0;
		background: rgb(var(--bg));
		color: rgb(var(--muted));
	}
	.inner {
		max-width: var(--container);
		margin: 0 auto;
		padding: 0 1.25rem;
		display: flex;
		justify-content: space-between;
		gap: 2rem;
		align-items: flex-start;
		flex-wrap: wrap;
	}
	.title {
		color: rgb(var(--text));
		font-weight: 700;
		letter-spacing: 0.02em;
	}
	.tagline {
		margin-top: 0.25rem;
		font-size: 0.95rem;
	}
	.right {
		text-align: right;
		font-size: 0.95rem;
	}
	.small {
		margin-top: 0.25rem;
		font-size: 0.85rem;
	}
	@media (max-width: 720px) {
		.right {
			text-align: left;
		}
	}
</style>
