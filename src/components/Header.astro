---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header class="site-header">
	<nav class="nav">
		<a class="brand" href="/" aria-label={`${SITE_TITLE} home`}>
			<span class="brand-mark">DG</span>
			<span class="brand-name">{SITE_TITLE}</span>
		</a>
		<div class="links" aria-label="Primary">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/firm">Firm</HeaderLink>
			<HeaderLink href="/contact">Contact</HeaderLink>
		</div>
	</nav>
</header>

<style>
	.site-header {
		position: sticky;
		top: 0;
		z-index: 50;
		background: rgba(var(--bg), 0.9);
		backdrop-filter: saturate(140%) blur(10px);
		border-bottom: 1px solid rgba(var(--border), 0.7);
	}
	.nav {
		max-width: var(--container);
		margin: 0 auto;
		padding: 0.9rem 1.25rem;
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 1rem;
	}
	.brand {
		display: inline-flex;
		align-items: center;
		gap: 0.75rem;
		text-decoration: none;
		color: rgb(var(--text));
	}
	.brand:hover {
		color: rgb(var(--text));
	}
	.brand-mark {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		width: 34px;
		height: 34px;
		border: 1px solid rgba(var(--border), 0.9);
		border-radius: 999px;
		font-size: 0.75rem;
		letter-spacing: 0.12em;
		text-transform: uppercase;
	}
	.brand-name {
		font-size: 0.95rem;
		font-weight: 700;
		letter-spacing: 0.02em;
	}
	.links {
		display: flex;
		align-items: center;
		gap: 0.25rem;
		flex-wrap: wrap;
	}
	@media (max-width: 540px) {
		.brand-name {
			display: none;
		}
	}
</style>
