---
import Layout from '../layouts/BaseLayout.astro';
import { SITE_TITLE, CONTACT_EMAIL } from '../consts';
---

<Layout title={`Inquiry — ${SITE_TITLE}`}>
	<section class="wrap">
		<p class="eyebrow">Engagement</p>
		<h1>Direct engagement.</h1>
		<p class="lede">
			To maintain absolute focus on current mandates, we are highly selective with new partnerships. Detail the opportunity, the timeline, and the specific hurdle to your conviction.
		</p>
		
		<div class="actions">
			<a class="btn primary" href={`mailto:${CONTACT_EMAIL}?subject=${encodeURIComponent('Mandate Inquiry — ' + SITE_TITLE)}`}
				>Initiate a conversation</a
			>
			<a class="btn" href="/">Return</a>
		</div>

		<hr class="subtle-hr" />

		<div class="metadata">
			<div class="meta-item">
				<span class="label">Discretion:</span>
				<p>All initial inquiries are handled directly by a principal and treated with absolute confidentiality.</p>
			</div>
			<div class="meta-item">
				<span class="label">Direct line:</span>
				<p><a href={`mailto:${CONTACT_EMAIL}`}>{CONTACT_EMAIL}</a></p>
			</div>
		</div>
	</section>

	<style>
		.wrap {
			padding: 1rem 0 1.25rem 0;
		}
		.lede {
			max-width: 38rem; /* Slightly tighter for impact */
			font-size: 1.1rem;
			margin-top: 0.6rem;
			line-height: 1.6;
		}
		.actions {
			margin-top: 2rem;
			display: flex;
			gap: 0.75rem;
			flex-wrap: wrap;
		}
		.subtle-hr {
			margin: 3rem 0 2rem 0;
			border: 0;
			border-top: 1px solid rgb(var(--border));
			opacity: 0.5;
		}
		.metadata {
			display: grid;
			grid-template-columns: 1fr 1fr;
			gap: 2rem;
		}
		.meta-item .label {
			display: block;
			text-transform: uppercase;
			font-size: 0.7rem;
			letter-spacing: 0.05em;
			color: rgb(var(--muted));
			margin-bottom: 0.5rem;
			font-weight: 600;
		}
		.meta-item p {
			font-size: 0.95rem;
			color: rgb(var(--foreground));
			margin: 0;
		}
		@media (max-width: 640px) {
			.metadata {
				grid-template-columns: 1fr;
			}
		}
	</style>
</Layout>
