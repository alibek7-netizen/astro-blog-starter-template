---
import Layout from '../layouts/BaseLayout.astro';
import { SITE_TITLE } from '../consts';
---

<Layout title={`${SITE_TITLE} — We find answers.`}>
	<section class="hero">
		<p class="eyebrow">Independent advisory</p>
		<h1>We find answers.</h1>
		<p class="lede">
			Decision-grade diligence, strategy, and execution support for investors and operators.
		</p>
		<div class="actions">
			<a class="btn primary" href="/contact">Contact</a>
			<a class="btn" href="/firm">Firm</a>
		</div>
	</section>

	<hr />

	<section class="grid">
		<div class="card span-4">
			<h3>Due diligence</h3>
			<p>Commercial, operational, and financial workstreams—fast, defensible, decision-ready.</p>
		</div>
		<div class="card span-4">
			<h3>Investment advisory</h3>
			<p>From first look to signing: IC materials, valuation, structuring, and negotiation support.</p>
		</div>
		<div class="card span-4">
			<h3>Special situations</h3>
			<p>When the facts are messy: turnaround hypotheses, stakeholder mapping, and path-to-close.</p>
		</div>
	</section>

	<section class="bottom">
		<p class="fine">
			We operate with discretion. We work in small teams. We optimize for signal—not slide count.
		</p>
	</section>

	<style>
		.hero {
			padding: 1rem 0 1.5rem 0;
		}
		.lede {
			max-width: 44rem;
			font-size: 1.1rem;
			margin-top: 0.6rem;
		}
		.actions {
			margin-top: 1.6rem;
			display: flex;
			gap: 0.75rem;
			flex-wrap: wrap;
		}
		.span-4 {
			grid-column: span 4;
		}
		.bottom {
			margin-top: 2.25rem;
		}
		.fine {
			max-width: 52rem;
			font-size: 0.95rem;
			color: rgb(var(--muted));
		}
		@media (max-width: 960px) {
			.span-4 {
				grid-column: 1 / -1;
			}
		}
	</style>
</Layout>
